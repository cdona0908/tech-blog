<div class="card">
  <h3 class="card-header">Sign Up</h3>
  <form class="signup-form card-body">
    
      <label for="username-signup" class="username-signup">Username:</label>
      <input class="form-input" type="text" id="username-signup" />
    
    
      <label for="password-signup" class="form-label">Password:</label>
      <input class="form-input" type="password" id="password-signup" />
    
    
      <button type="submit" class="btn">Sign Up!</button>
    
    <a class="login-signup-link" href="/login">Login instead</a>
  </form>
</div>

<script src="/javascript/signup.js"></script>