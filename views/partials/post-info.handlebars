<article class="card ">
  
  <div class="card-header flex-column ">
    <a href="/post/{{id}}" class="justify-space-around">
      <h2>{{title}}</h2>
      <div >
        Posted by {{user.username}} on {{format_date created_at}}
      </div>
    </a>        
  </div>
  <div class="card-body">
    <span>({{post_content}})</span>
  </div>  
  
</article>