<article class="card">  
  <h2 class="card-header">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title" class="form-label">Title</label>
      <input class="form-input" name="post-title" type="text" value="{{post.title}}" />
      <label for="post-content" class="form-label">Content</label>
      <input class="form-input" name="post-content" type="text" value="{{post.post_content}}" />
      
    </div>
    <div>
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="btn" type="submit">Save post</button>
    <button class="btn delete-post-btn" type="button" >Delete post</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>